{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./src",
    "allowJs": true,
    "outDir": "generated",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "types": ["node"],
    "noImplicitAny": false,
  },
  "exclude": [
    "node_modules",
    "../*.test.*"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d"
  ],
}
